{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Converge",
            "type": "shell",
            "command": "molecule converge"
        },
        {
            "label": "Verify",
            "type": "shell",
            "command": "molecule verify"
        },
        {
            "label": "build",
            "dependsOrder": "sequence",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "dependsOn": [
                "Converge",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "dependsOrder": "sequence",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "dependsOn": [
                "destroy",
                "Converge",
                "verify",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
